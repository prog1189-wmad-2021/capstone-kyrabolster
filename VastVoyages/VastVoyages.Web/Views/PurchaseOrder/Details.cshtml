                <th>
                    @Html.DisplayNameFor(model => model.items[0].ItemName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.items[0].ItemDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.items[0].Justification)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.items[0].Location)
                </th>
