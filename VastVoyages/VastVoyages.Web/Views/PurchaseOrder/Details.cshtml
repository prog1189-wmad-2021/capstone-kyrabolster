                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DecisionReason)
