@model IEnumerable<VastVoyages.Model.Review>

@{
    ViewBag.Title = "Your Employees";
    Layout = "~/Views/Shared/_NavTemplate.cshtml";
}

    <div class="container" style="width: 95%; margin-top: 5%;">

        <h2>Select an Employee To Review</h2>

        @using (Html.BeginForm("index", "Reviews", FormMethod.Get))
        {

            if (Model.Any())
            {
                <table class="table">
                    <tr>
                        <th>
                            Year
                        </th>
                        <th>
                            Quarter
                        </th>
                        <th>
                            Date
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReviewDate.Year)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quarter)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReviewDate)
                            </td>
                            <td>
                                @Html.ActionLink("View", "ReviewDetails/", new { reviewId = item.EmployeeReviewId })
                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                @ViewBag.Reviews
            }
        }
    </div>

@{
    if (TempData["Success"] != null)
    {
        <script type="text/javascript">
        alert(@Html.Raw(Json.Encode(TempData["Success"])));
        </script>
    }
}