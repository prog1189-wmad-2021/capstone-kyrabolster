@model IEnumerable<VastVoyages.Model.EmployeeDTO>

@{
    ViewBag.Title = "Your Employees";
    Layout = "~/Views/Shared/_NavTemplate.cshtml";
}

<div class="container" style="width: 95%; margin-top: 5%;">

    <h2>Select an Employee To Review</h2>

    @using (Html.BeginForm("index", "Reviews", FormMethod.Get))
    {

        if (Model.Any())
        {
            <table class="table">
                <tr>
                    <th>
                        Employee Name
                    </th>
                    <th>
                        Employee Id
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmpId)
                        <td>
                            @Html.ActionLink("Create Review", "Create", new { employeeId = item.EmpId })
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            @ViewBag.Reviews
        }

    }
</div>

@{
    if (TempData["Success"] != null)
    {
        <script type="text/javascript">
        alert(@Html.Raw(Json.Encode(TempData["Success"])));
        </script>
    }
}